{
  "manifest_version": 3,
  "name": "Gmail Auto-Reply with AI",
  "version": "1.0.0",
  "description": "Automatically responds to Gmail emails using AI and handles booking slot requests.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://mail.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
